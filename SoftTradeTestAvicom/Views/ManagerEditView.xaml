<UserControl x:Class="SoftTradeTestAvicom.Views.ManagerEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoftTradeTestAvicom.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock>Manager edit</TextBlock>
        <Button Command="{Binding Cancel}">Cancel</Button>
        <Button Command="{Binding Ok}">Ok</Button>
        <TextBlock>Имя: </TextBlock>
        <TextBox Text="{Binding Manager.Name}"></TextBox>
    </StackPanel>
</UserControl>
