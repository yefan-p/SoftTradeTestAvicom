<Window x:Class="SoftTradeTestAvicom.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utility="clr-namespace:SoftTradeTestAvicom.Utils"
        xmlns:local="clr-namespace:SoftTradeTestAvicom.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <utility:BooleanVisibilityConverter x:Key="BooleanVisibilityConverter" />
    </Window.Resources>
    <StackPanel>
        <ContentControl x:Name="FrameContent" x:FieldModifier="public" VerticalAlignment="Top" 
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </StackPanel>
</Window>
