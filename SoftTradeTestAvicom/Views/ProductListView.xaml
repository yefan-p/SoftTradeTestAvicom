<UserControl x:Class="SoftTradeTestAvicom.Views.ProductListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:utility="clr-namespace:SoftTradeTestAvicom.Utils"
             xmlns:local="clr-namespace:SoftTradeTestAvicom.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <utility:BooleanVisibilityConverter x:Key="BooleanVisibilityConverter" />
    </UserControl.Resources>
    <StackPanel>
        <Label>Product List</Label>
        <Button Command="{Binding GoMainMenu}">Main menu</Button>
        <Button Command="{Binding GoBack}" Visibility="{Binding ShowOkButton, Converter={StaticResource BooleanVisibilityConverter}}">Back</Button>
        <Button Command="{Binding Ok}" Visibility="{Binding ShowOkButton, Converter={StaticResource BooleanVisibilityConverter}}">Ok</Button>
        <Button Command="{Binding Add}">Add</Button>
        <Button Command="{Binding Edit}">Edit</Button>
        <Button Command="{Binding Delete}" CommandParameter="{Binding SelectedProduct}">Delete</Button>
        <Button Command="{Binding Refresh}">Refresh</Button>
        <ListBox Grid.Column="0" ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock FontSize="18" Text="Product name: " Margin="3" />
                        <TextBlock FontSize="18" Text="{Binding Path=Name}" Margin="3"/>
                        <TextBlock FontSize="18" Text=";    Price: " Margin="3"/>
                        <TextBlock FontSize="18" Text="{Binding Path=Price}" Margin="3"/>
                        <TextBlock FontSize="18" Text=";    Type: " Margin="3"/>
                        <TextBlock FontSize="18" Text="{Binding Path=Type}" Margin="3"/>
                        <TextBlock FontSize="18" Text=";    Period: " Margin="3"/>
                        <TextBlock FontSize="18" Text="{Binding Path=SubscriptionPeriod}" Margin="3"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>
